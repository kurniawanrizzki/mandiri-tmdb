<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/icon_large_width"
            android:layout_height="@dimen/icon_large_width"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_no_result"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_100"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/normal_200"
            android:textAppearance="@style/TextAppearance.TMDB.Montserrat.Subtitle1"
            android:textColor="@color/white"
            android:text="@string/no_result"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>